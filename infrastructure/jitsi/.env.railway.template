# Base URL exposed by the public jitsi-web Railway service
PUBLIC_URL=https://meet.example.com

# Railway terminates TLS at edge. Keep internal web container on HTTP.
ENABLE_LETSENCRYPT=0

# Timezone
TZ=UTC

# Host and auth domains
XMPP_DOMAIN=meet.jitsi
XMPP_AUTH_DOMAIN=auth.meet.jitsi
XMPP_INTERNAL_MUC_DOMAIN=internal-muc.meet.jitsi
XMPP_MUC_DOMAIN=muc.meet.jitsi

# XMPP component credentials (MUST change)
JICOFO_AUTH_USER=focus
JICOFO_AUTH_PASSWORD=change-me-jicofo-auth-password

JVB_AUTH_USER=jvb
JVB_AUTH_PASSWORD=change-me-jvb-auth-password

JIGASI_XMPP_USER=jigasi
JIGASI_XMPP_PASSWORD=change-me-jigasi-password

JIBRI_RECORDER_USER=recorder
JIBRI_RECORDER_PASSWORD=change-me-jibri-recorder-password
JIBRI_XMPP_USER=jibri
JIBRI_XMPP_PASSWORD=change-me-jibri-xmpp-password

# JVB networking
JVB_PORT=10000
JVB_STUN_SERVERS=stun:meet-jit-si-turnrelay.jitsi.net:443
# JVB_ADVERTISE_IPS=203.0.113.10

# Public HTTP bind for web container
HTTP_PORT=80

# Optional features
ENABLE_AUTH=0
ENABLE_GUESTS=1
ENABLE_RECORDING=0
ENABLE_TRANSCRIPTIONS=0

JVB_ADVERTISE_IPS=
