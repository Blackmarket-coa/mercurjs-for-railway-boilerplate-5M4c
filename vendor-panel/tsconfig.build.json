{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "composite": false
  },
  "include": [
    "src/i18n/**/*.ts",
    "src/i18n/**/*.json",
    "src/types/**/*.ts",
    "src/types/**/*.tsx",
    "src/extensions/types.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
